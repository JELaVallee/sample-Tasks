<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
     <GridLayout rows="*, auto" >
        <ListView items="{{ tasks }}" itemTap="listViewItemTap">
            <ListView.itemTemplate>
              <StackLayout>
                <Label text="{{ Name }}" />
              </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <StackLayout row="1">
            <Button text="+ Task" tap="addTask" />
            <Button text="+ Project" tap="addProject"/>
            <Button text="- Logout" tap="logout"/>
            <Button text="+ Userinfo" tap="editUser"/>
        </StackLayout>
    </GridLayout>    
</Page>