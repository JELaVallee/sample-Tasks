<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="onNavigatedTo">
        <GridLayout rows="auto, *, auto">
            <SegmentedBar selectedIndex="{{ selectedIndex }}">
                <SegmentedBar.items>
                    <SegmentedBarEntry title="TODAY" />
                    <SegmentedBarEntry title="TOMORROW" />
                    <SegmentedBarEntry title="NEXT" />
                </SegmentedBar.items>
            </SegmentedBar>

            <ListView items="{{ tasks }}" itemTap="listViewItemTap" row="1">
                <ListView.itemTemplate>
                  <StackLayout>
                      <Label text="{{ ProjectName}}"/>
                      <Label text="{{ Name }}" />
                  </StackLayout>
                </ListView.itemTemplate>
            </ListView>

            <StackLayout row="2">
                <Button text="+ Task" tap="addTask" />
                <Button text="+ Project" tap="addProject"/>
                <Button text="- Logout" tap="logout"/>
                <Button text="+ Userinfo" tap="editUser"/>
            </StackLayout>
            
            <AbsoluteLayout row="1">
                <Image id="FAB" url="~/app/res/FAB_add.png" left="100" top="400" stretch="none"/>
            </AbsoluteLayout>

        </GridLayout>
</Page>