<Page xmlns="http://www.nativescript.org/tns.xsd"  loaded="pageLoaded">
    <GridLayout rows="auto, auto,*, auto">
        <StackLayout row="0">
            <Label text="Name"/>
            <TextField id="name" text="{{Name}}"/>
         </StackLayout>
        <StackLayout row="1">
            <Label text="Due"/>
            <TextField id="dueDate" />
            <Label text="Project"/>
            <Button click="viewProject" text="{{ ProjectName }}" />
        </StackLayout>        
        <ListView id="projectList" row="2" itemTap="onProjectSelected">
            <ListView.itemTemplate>
              <StackLayout>
                 <Label text="{{ Name }}" />
                 <!--<Switch checked="{{ selected }}"/>-->
              </StackLayout>
            </ListView.itemTemplate>
        </ListView>
       <StackLayout row="3">
           <Button text="Save" click="saveTask"/>        
           <Button text="Cancel" click="cancel"/>
       </StackLayout>
       <ActivityIndicator id="activityIndicator"/>
    </GridPanel>
</Page>