<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="onNavigatedTo">
    <ScrollView>
        <GridLayout>
            <StackLayout style="horizontal-align:stretch">
                <TextField id="name" hint="Task name" text="{{Name}}"/>
                <StackLayout cssClass="iconContainer" orientation="horizontal" tap="takePicture" id="photoPicker">
                    <Image url="~/app/res/ic_photo.png" cssClass="smallIcon" stretch="none"/>
                    <Label text="Tap to set photo"/>
                    <Image id="img" width="10" height="10" stretch="none"/>
                </StackLayout>
                
                <StackLayout cssClass="iconContainer" orientation="horizontal">
                    <Image url="~/app/res/ic_email.png" cssClass="smallIcon" stretch="none"/>
                    <TextField id="email" keyboardType="email" hint="email" text="{{Email}}"/>
                </StackLayout>
                
                <StackLayout cssClass="iconContainer" orientation="horizontal" >
                    <Image url="~/app/res/ic_url.png" cssClass="smallIcon" stretch="none"/>
                    <TextField id="url" hint="url" keyboardType="url" text="{{Url}}"/>
                </StackLayout>
                <!--        
                    To-Do
                    <TimePicker hour="10"/>
                    <TextField id="dueDate" hint="due date"/>
                -->
               <TextField id="notes" hint="notes" text="{{Notes}}"/>
               <Button text="Save" tap="saveTask" cssClass="primaryActionButton"/>        
               <Button text="Cancel" tap="cancel" cssClass="secondaryActionButton"/>
            </StackLayout>
            <ActivityIndicator id="activityIndicator"/>
        </GridLayout>
    </ScrollView>
</Page>