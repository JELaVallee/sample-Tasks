<Page xmlns="http://www.nativescript.org/tns.xsd"  loaded="pageLoaded">
    <GridLayout rows="auto, auto,*, auto">
        <StackLayout row="0">
            <TextField id="name" hint="Task name" text="{{Name}}"/>
         </StackLayout>
        <StackLayout row="1">
            <TextField id="dueDate" hint="due date"/>
            <TextField id="email" keyboardType="email" hint="email" text="{{Email}}"/>
            <TextField id="url" hint="url" keyboardType="url" text="{{Url}}"/>
            <TextField id="notes" hint="notes" text="{{Notes}}"/>
            
            <Button tap="viewProject" text="{{ ProjectName }}" />
        </StackLayout>        
        <ListView id="projectList" row="2" itemTap="onProjectSelected">
            <ListView.itemTemplate>
              <StackLayout>
                 <Label text="{{ Name }}" />
                 <!--<Switch checked="{{ selected }}"/>-->
              </StackLayout>
            </ListView.itemTemplate>
        </ListView>
       <StackLayout row="3">
           <Button text="Save" tap="saveTask"/>        
           <Button text="Cancel" tap="cancel"/>
       </StackLayout>
       <ActivityIndicator id="activityIndicator"/>
    </GridLayout>
</Page>