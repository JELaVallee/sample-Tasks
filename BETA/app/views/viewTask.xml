<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="onNavigatedTo">
    <GridLayout>
        <StackLayout>
            <Label cssClass="projectName">
                <Label.formattedText>
                    <FormattedString>
                      <FormattedString.spans>
                        <Span text="{{ProjectName}}" fontAttributes="Bold, Italic" />
                      </FormattedString.spans>
                    </FormattedString>
                  </Label.formattedText>
            </Label>
            <Label text="{{task.Name}}" cssClass="taskName" textWrap="true"/>
            <GridLayout rows="auto, auto, auto" columns="*,*">
                
                <StackLayout cssClass="iconContainer" orientation="horizontal" style.visibility="{{ DueDateText ? 'visible' : 'collapsed' }}">
                    <Image url="~/app/res/ic_duedate.png" cssClass="smallIcon" stretch="none"/>
                    <Label text="{{DueDateText}}"/>
                </StackLayout>
                
                <StackLayout cssClass="iconContainer" col="1" orientation="horizontal" style.visibility="{{ ReminderText ? 'visible' : 'collapsed' }}">
                    <Image url="~/app/res/ic_reminder.png" cssClass="smallIcon" stretch="none"/>
                    <Label text="{{ReminderText}}"/>
                </StackLayout>
                
                <StackLayout cssClass="iconContainer" row="1" orientation="horizontal" style.visibility="{{ task.Email ? 'visible' : 'collapsed' }}">
                    <Image url="~/app/res/ic_email.png" cssClass="smallIcon" stretch="none"/>
                    <Label text="{{task.Email}}"/>
                </StackLayout>
                
                <StackLayout cssClass="iconContainer" row="2" orientation="horizontal" style.visibility="{{ task.Url ? 'visible' : 'collapsed' }}">
                    <Image url="~/app/res/ic_url.png" cssClass="smallIcon" stretch="none"/>
                    <Label text="{{task.Url}}" />
                </StackLayout>
                
            </GridLayout>

            <Label text="{{task.Notes}}" cssClass="notesContainer" textWrap="true"/>
            
            <!--<Button text="Delete" tap="onDeleteButtonTap"/>-->
            <Button text="Complete" tap="onCompleteButtonTap" cssClass="primaryActionButton"/>
            <Button text="Edit" tap="onEditButtonTap" cssClass="secondaryActionButton"/>
        </StackLayout>
        
        <ActivityIndicator id="activityIndicator"/>
     </GridLayout>
</Page>