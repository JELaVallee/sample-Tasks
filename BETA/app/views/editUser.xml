<?xml version="1.0" encoding="UTF-8" ?>
<Page loaded="pageLoaded">
    <StackPanel>
        <Label text="Your name"/>
        <TextField id="name" text="{{DisplayName}}"/>

        <Label text="Your Email"/>
        <TextField id="email" text="{{Email}}" editable="false" />

        <Label text="Username"/>
        <TextField id="username"  text="{{Username}}"/>
        
        <Label text="Password"/>
        <TextField id="password" secure="true" text="{{Password}}"/>
        
        <Label text="Repeat Password"/>
        <TextField id="passwordRepeat" secure="true" text="{{Password}}"/>
        
        <Button text="Save" click="onSaveButtonClick"/>        
        <Button text="Cancel" click="onCancelButtonClick"/>
        
        <ActivityIndicator id="activityIndicator"/>
        </StackPanel>
</Page>