<StackLayout row="1" >
  <Label cssClass="header">
    <Label.formattedText>
      <FormattedString>
        <FormattedString.spans>
          <Span text="{{  project | getProjectName(task.Project) }}" fontAttributes="Bold, Italic" />
        </FormattedString.spans>
      </FormattedString>
    </Label.formattedText>
  </Label>

  <Label row="2" text="{{ task.Name }}" cssClass="subHeader" textWrap="true"/>
</StackLayout>